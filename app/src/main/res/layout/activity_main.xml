<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/shoppingcar2"
    tools:context=".MainActivity">

    <LinearLayout
        android:orientation="vertical"
        android:layout_marginTop="15dp"
        android:layout_centerHorizontal="true"
        android:gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:text="J O O M"
            android:textSize="36sp"
            android:textAlignment="center"
            android:textColor="@color/colorTitle"
            android:fontFamily="serif"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:paddingTop="300dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/signIn"
            android:text="Sign in"
            android:background="@drawable/btn_sing_in_background"
            android:textColor="@android:color/white"
            android:layout_width="250dp"
            android:layout_gravity="center"
            android:layout_height="wrap_content" />

        <Button
            android:id="@+id/register"
            android:text="Register"
            android:background="@drawable/btn_register_background"
            android:layout_width="250dp"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:textColor="@color/textBtnRegister"
            android:layout_height="wrap_content" />

    </LinearLayout>

</RelativeLayout>